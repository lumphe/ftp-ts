    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run test",
            "program": "${workspaceFolder}/test/test.js",
            // "preLaunchTask": "npm: build",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run bin",
            "program": "${workspaceFolder}/dist/bin.js",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "args": [
                "--implicit",
                "-p",
            ],
            "sourceMaps": true
        }
    ]
}